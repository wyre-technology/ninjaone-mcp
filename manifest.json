{
  "manifest_version": "0.3",
  "name": "ninjaone-mcp",
  "version": "0.0.1",
  "display_name": "NinjaOne MCP Server",
  "description": "NinjaOne MCP server with decision tree architecture for Claude",
  "author": { "name": "Aaron Sachs", "url": "https://github.com/asachs01" },
  "repository": { "type": "git", "url": "https://github.com/wyre-technology/ninjaone-mcp" },
  "homepage": "https://github.com/wyre-technology/ninjaone-mcp",
  "license": "MIT",
  "keywords": ["ninjaone", "rmm", "monitoring", "msp", "it-management"],
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/dist/index.js"],
      "env": {
        "NINJAONE_CLIENT_ID": "${user_config.ninjaone_client_id}",
        "NINJAONE_CLIENT_SECRET": "${user_config.ninjaone_client_secret}",
        "NINJAONE_REGION": "${user_config.ninjaone_region}",
        "MCP_TRANSPORT": "stdio"
      }
    }
  },
  "tools_generated": true,
  "user_config": {
    "ninjaone_client_id": { "type": "string", "title": "NinjaOne Client ID", "description": "Your NinjaOne client ID", "required": true },
    "ninjaone_client_secret": { "type": "string", "title": "NinjaOne Client Secret", "description": "Your NinjaOne client secret", "required": true, "sensitive": true },
    "ninjaone_region": { "type": "string", "title": "NinjaOne Region", "description": "NinjaOne region (default: us)", "required": false }
  },
  "compatibility": { "platforms": ["darwin", "win32", "linux"], "runtimes": { "node": ">=18.0.0" }, "claude_desktop": ">=0.10.0" }
}